@page
@model Fisioterapia.Web.Pages.Condutas.DeleteModel

@{
    ViewData["Title"] = "Remover";
}

<h1>@ViewData["Title"]</h1>

<h3>
    Tem certeza que deseja remover a conduta do dia @Model.CondutaViewModel.DataConduta para o cliente
    @Model.CondutaViewModel.Paciente.NomeCompleto? Est&aacute; opera&ccedil;&atilde;o n&atilde;o poder&aacute; ser desfeita.
</h3>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CondutaViewModel.DataConduta)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CondutaViewModel.DataConduta)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CondutaViewModel.Descricao)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CondutaViewModel.Descricao)
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="CondutaViewModel.Id" />
    <input type="submit" value="Remover" class="btn btn-danger" /> |
    <a asp-page="./Index" asp-route-pacienteid="@Model.CondutaViewModel.PacienteId">Voltar para lista</a>
</form>