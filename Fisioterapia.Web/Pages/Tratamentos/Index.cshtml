@page
@model Fisioterapia.Web.Pages.Tratamentos.IndexModel

@{
    ViewData["Title"] = "Lista de tratamentos";
}

<h1>Lista de tratamentos</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo tratamento</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TratamentosViewModels[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TratamentosViewModels[0].DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TratamentosViewModels[0].DataAlteracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TratamentosViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @item.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @if (item.DataAlteracao.HasValue)
                    {
                        @item.DataAlteracao.Value.ToString("dd/MM/yyyy HH:mm")
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                        <i class="fas fa-search"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Remover">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
