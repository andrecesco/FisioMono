@page
@model Fisioterapia.Web.Pages.Tratamentos.EditModel

@{
    ViewData["Title"] = "Alterar";
}

<h1>Alterar</h1>

<h4>Tratamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TratamentoViewModel.Nome" class="control-label"></label>
                <input asp-for="TratamentoViewModel.Nome" class="form-control" />
                <span asp-validation-for="TratamentoViewModel.Nome" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="TratamentoViewModel.Id" />
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para listas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
