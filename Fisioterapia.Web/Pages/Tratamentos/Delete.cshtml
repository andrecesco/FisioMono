@page
@model Fisioterapia.Web.Pages.Tratamentos.DeleteModel

@{
    ViewData["Title"] = "Remover tratamento";
}

<h1>Remover</h1>

<h3>Tem certeza que deseja remover o tratamento @Model.TratamentoViewModel.Nome? Está operação não poderá ser desfeita.</h3>
<div>
    <h4>Tratamento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TratamentoViewModel.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TratamentoViewModel.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TratamentoViewModel.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TratamentoViewModel.DataCriacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TratamentoViewModel.DataAlteracao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TratamentoViewModel.DataAlteracao)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TratamentoViewModel.Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar para lista</a>
    </form>
</div>
