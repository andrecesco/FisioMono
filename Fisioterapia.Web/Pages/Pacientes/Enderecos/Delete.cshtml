@page
@model Fisioterapia.Web.Pages.Enderecos.DeleteModel

@{
    ViewData["Title"] = "Remover Endereço";
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <i class="fas fa-times"></i>
    </button>
</div>

<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Logradouro)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Logradouro)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Numero)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Numero)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Complemento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Complemento)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Bairro)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Bairro)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Cidade)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Cidade)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.Estado)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.Estado)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EnderecoViewModel.CEP)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EnderecoViewModel.CEP)
        </dd>
    </dl>
</div>

<div class="modal-footer">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EnderecoViewModel.Id" />
        <input type="hidden" asp-for="EnderecoViewModel.PacienteId" />
        <input type="button" value="Cancelar" class="btn btn-secondary" data-dismiss="modal" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
</div>
