@page
@model Fisioterapia.Web.Pages.Enderecos.EditModel

@{
    ViewData["Title"] = "Alterar Endereço";
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <i class="fas fa-times"></i>
    </button>
</div>
<form asp-action="Edit" method="post">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.CEP" class="control-label"></label>
            <input asp-for="EnderecoViewModel.CEP" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.CEP" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Logradouro" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Logradouro" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Logradouro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Numero" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Numero" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Numero" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Complemento" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Complemento" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Complemento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Bairro" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Bairro" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Bairro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Cidade" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Cidade" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Cidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnderecoViewModel.Estado" class="control-label"></label>
            <input asp-for="EnderecoViewModel.Estado" class="form-control" />
            <span asp-validation-for="EnderecoViewModel.Estado" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="EnderecoViewModel.Id" />
        <input type="hidden" asp-for="EnderecoViewModel.PacienteId" />
        <input type="submit" value="Alterar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
