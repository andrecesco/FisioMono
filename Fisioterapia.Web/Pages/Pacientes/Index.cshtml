@page
@model Fisioterapia.Web.Pages.Pacientes.IndexModel

@{
    ViewData["Title"] = "Lista de pacientes";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Lista de pacientes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo Paciente</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].Documento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacientesViewModels[0].Profissao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PacientesViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Documento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @if (item.DataNascimento.HasValue)
                    {
                        @item.DataNascimento.Value.ToShortDateString();
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profissao)
                </td>
                <td class="text-right">
                    <a asp-page="/Condutas/Index" asp-route-pacienteid="@item.Id" class="btn btn-sm btn-primary" title="Ver Condutas">
                        <i class="fas fa-book-open"></i>
                    </a>
                    <a asp-page="./Edit" asp-route-pacienteid="@item.Id" class="btn btn-sm btn-info" title="Editar">
                        <i class="fas fa-edit text-white"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Remover">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
