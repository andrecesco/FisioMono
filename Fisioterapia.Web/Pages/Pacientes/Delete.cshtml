@page
@model Fisioterapia.Web.Pages.Pacientes.DeleteModel

@{
    ViewData["Title"] = "Remover Paciente";
}

<h1>Remover</h1>

<h3>Tem certeza que deseja remover o paciente @Model.PacienteViewModel.NomeCompleto? Está operação não poderá ser desfeita.</h3>
<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.NomeCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.Telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.Telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.Celular)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.Celular)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.DataNascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteViewModel.Profissao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PacienteViewModel.Profissao)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="PacienteViewModel.Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar para a lista</a>
    </form>
</div>
