@page
@model Fisioterapia.Web.Pages.Pacientes.Condutas.IndexModel

@{
    ViewData["Title"] = "Lista de Condutas";
}

<h1>Lista de Condutas - @ViewData["NomePaciente"]</h1>

<p>
    <a asp-page="././Paciente/Index">Voltar para a lista de pacientes</a>
</p>
<p>
    <a asp-page="Create" class="btn btn-primary">Nova conduta</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CondutasViewModels[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondutasViewModels[0].DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondutasViewModels[0].DataAlteracao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CondutasViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataCriacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAlteracao)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                        <i class="fas fa-search"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Remover">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
