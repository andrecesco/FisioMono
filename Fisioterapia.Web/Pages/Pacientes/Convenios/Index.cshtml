@page
@model Fisioterapia.Web.Pages.Pacientes.Convenios.IndexModel

@{
    ViewData["Title"] = "Convênios";
}

<h1>Conv&ecirc;nios</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Novo conv&ecirc;nio</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConveniosViewModels[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConveniosViewModels[0].Matricula)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ConveniosViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Remover">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
