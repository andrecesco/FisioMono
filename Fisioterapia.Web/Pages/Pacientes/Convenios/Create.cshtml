@page
@model Fisioterapia.Web.Pages.Convenios.CreateModel

@{
    ViewData["Title"] = "Novo convênio";
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title">Novo Conv&ecirc;nio</h4>
    <button type="button" class="close" data-dismiss="modal">
        <i class="fas fa-times"></i>
    </button>
</div>

<form asp-action="Create" method="post">
    <div class="modal-body">
        <partial name="_StatusMessage" for="StatusMessage" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ConvenioViewModel.Nome" class="control-label"></label>
            <input asp-for="ConvenioViewModel.Nome" class="form-control" />
            <span asp-validation-for="ConvenioViewModel.Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConvenioViewModel.Matricula" class="control-label"></label>
            <input asp-for="ConvenioViewModel.Matricula" class="form-control" />
            <span asp-validation-for="ConvenioViewModel.Matricula" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="ConvenioViewModel.PacienteId" />
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
