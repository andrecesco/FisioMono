@page
@model Fisioterapia.Web.Pages.Convenios.DeleteModel

@{
    ViewData["Title"] = "Remover Convênio";
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title">@ViewData["Title"]</h4>
    <button type="button" class="close" data-dismiss="modal">
        <i class="fas fa-times"></i>
    </button>
</div>

<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConvenioViewModel.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConvenioViewModel.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConvenioViewModel.Matricula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConvenioViewModel.Matricula)
        </dd>
    </dl>
</div>

<div class="modal-footer">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ConvenioViewModel.Id" />
        <input type="hidden" asp-for="ConvenioViewModel.PacienteId" />
        <input type="button" value="Cancelar" class="btn btn-secondary" data-dismiss="modal" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
</div>
